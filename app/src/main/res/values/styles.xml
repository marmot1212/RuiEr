<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CustomAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--标题栏-->
        <!--<item name="colorPrimary">@android:color/holo_blue_bright</item>-->
        <!--状态栏-->
        <item name="colorPrimaryDark">@color/status_bar_color</item>
    </style>


    <!--首页底部Tab-->
    <style name="main_tab_btn">
        <item name="android:button">@null</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:onClick">onClick</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!--字体style 14sp #999-->
    <style name="style_14_999">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#999</item>
    </style>
    <!--字体style 14sp #666-->
    <style name="style_14_666">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#666</item>
    </style>
    <!--字体style 16sp #fff-->
    <style name="style_16_fff">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#fff</item>
    </style>

</resources>
